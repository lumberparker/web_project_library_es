# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

# For JavaScript files
[*.js]
max_line_length = 100

# For Python files
[*.py]
indent_size = 4

# For Markdown files
[*.md]
trim_trailing_whitespace = false
